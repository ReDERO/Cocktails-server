@model IEnumerable<CocktailsDatabase.CocktailIngredient>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cocktail.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cocktail.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredient.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "CocktailIngredients", new { cocktailId = item.CocktailId, ingredientId = item.IngredientId }, null) |
            @Html.ActionLink("Delete", "Delete", "CocktailIngredients", new { cocktailId = item.CocktailId, ingredientId = item.IngredientId }, null)
        </td>
    </tr>
}

</table>
